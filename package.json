{
    "name": "dtrader-crypto-2.0",
    "version": "2.0.0",
    "description": "Торговый консольный бот для криптобиржи Gate.io",
    "main": "dist/index.js",
    "scripts": {
        "start": "node dist/index.js",
        "dev": "tsx --watch src/index.ts",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "clean": "del-cli dist",
        "prebuild": "npm run clean",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.{ts,js,json}\"",
        "typecheck": "tsc --noEmit",
        "prod": "npm run build && npm start",
        "debug": "node --inspect=0.0.0.0:9229 dist/index.js"
    },
    "keywords": [
        "crypto",
        "trading",
        "bot",
        "gate.io",
        "terminal",
        "console",
        "typescript"
    ],
    "author": "Your Name",
    "license": "MIT",
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "dependencies": {
        "date-fns": "^3.6.0",
        "dotenv": "^16.4.5",
        "terminal-kit": "^3.1.1",
        "winston": "^3.14.2"
    },
    "devDependencies": {
        "@types/terminal-kit": "^2.5.7",
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.9.1",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.5.4",
        "@typescript-eslint/eslint-plugin": "^8.4.0",
        "@typescript-eslint/parser": "^8.4.0",
        "del-cli": "^5.1.0",
        "eslint": "^9.9.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "glob": "^10.3.10",
        "jest": "^29.7.0",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.3",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.0",
        "typescript": "^5.5.4"
    },
    "overrides": {
        "glob": "^10.3.10",
        "rimraf": "^5.0.5",
        "inflight": "npm:@npmcli/promise-spawn@^7.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yourusername/dtrader-crypto-2.0.git"
    },
    "bugs": {
        "url": "https://github.com/yourusername/dtrader-crypto-2.0/issues"
    },
    "homepage": "https://github.com/yourusername/dtrader-crypto-2.0#readme"
}
